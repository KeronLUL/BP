{
  "$id": "Config",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "format": "uri"
    },
    "loop": {
      "type": "boolean"
    },
    "driver": {
      "type": "string",
      "enum": [
        "Chrome",
        "Firefox",
        "Safari"
      ]
    },
    "waitTime": {
      "type": "integer",
      "minimum": 0.0,
      "maximum": 1E+18
    },
    "commands": {
      "$id": "List`1",
      "type": "array",
      "items": {
        "$id": "CommandConfig",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "args": {
            "$id": "Args",
            "type": "object",
            "properties": {
              "attribute": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "path": {
                "type": "string"
              },
              "property": {
                "type": "string"
              },
              "script": {
                "type": "string"
              },
              "text": {
                "type": "string"
              },
              "time": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "url",
    "loop",
    "waitTime"
  ]
}